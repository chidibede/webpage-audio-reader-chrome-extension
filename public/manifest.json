{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Webpage audio reader",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "contextMenus",
        "offscreen"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png",
        "32": "icon.png"
    },
    "description": "Experience effortless webpage narration with our Chrome extension! Transform text on any webpage into an engaging audio experience, perfect for auditory learners."
}